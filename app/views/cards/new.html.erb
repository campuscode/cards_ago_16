<p><%= flash[:alert] %></p>
<h1>Novo Card</h1>
<%= form_for(@card) do |f| %>
  <div>
    <%= f.label :front, "Frente" %>
    <%= f.text_field :front %>
  </div>
  <div>
    <%= f.label :back, "Verso" %>
    <%= f.text_field :back %>
  </div>
  <div>
    <%= f.label :author, "Autor" %>
    <%= f.text_field :author %>
  </div>
  <%= f.submit 'Enviar' %>
<% end %>
