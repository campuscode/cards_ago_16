<%= @card.friendly_description %>
<p>Enviado por: <%= @card.author %></p>
<%= link_to 'Editar', edit_card_path(@card) %>
<%= link_to 'Apagar', @card, method: :delete %>

<% @card.comments.each do |comment| %>
  <%= comment.author %> comentou:<br>
  <p><%= comment.body %></p>
<% end %>

